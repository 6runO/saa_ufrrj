    <%= form_tag(upload_path, multipart: true) do %>
      <div>
        <%= label_tag 'historico', 'Escolher Arquivo', class: 'btn btn-escolher-arquivo mb-3' %>
        <%= file_field_tag 'historico', accept: '.pdf', class: 'upload-input', required: true %>
      </div>
      <div class="preview text-light small-font">
      </div>
      <div>
        <%= submit_tag "Analisar", class: 'btn btn-success' %>
      </div>
    <% end %>
  </div>
