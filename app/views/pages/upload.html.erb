<div class="container pt-3 pb-5 px-2 px-sm-3">

  <%= form_tag(upload_path, multipart: true) do %>
    <div class="d-sm-flex align-items-center pb-2">
      <div>
        <%= label_tag 'historico', 'Escolher Histórico para Análise', class: 'btn btn-sm btn-preto-brilhante m-0' %>
        <%= file_field_tag 'historico', accept: '.pdf', class: 'upload-input', required: true %>
      </div>
      <div class="preview preview-display pl-2 pr-3">
      </div>
      <div>
        <%= submit_tag "Analisar", class: 'btn btn-sm btn-success btn-hidden btn-analisar' %>
      </div>
    </div>
  <% end %>

  <% if @pdf_verified %>
    <div class="shadow rounded pb-4 box-white">
      <div class="card-header">
        <ul class="nav nav-pills card-header-tabs" id="myTab" role="tablist">
          <li class="nav-item">
            <a class="nav-link active" id="geral-tab" data-toggle="tab" href="#geral" role="tab" aria-controls="geral" aria-selected="true">Geral</a>
          </li>
          <% @unique_ano_per.each_with_index do |ano_per, index| %>
            <li class="nav-item">
              <a class="nav-link" id=<%= "tab-#{index}" %> data-toggle="tab" href=<%= "#per-#{index}" %> role="tab" aria-controls=<%= "#per-#{index}" %> aria-selected="false"><%= ano_per %></a>
            </li>
          <% end %>
        </ul>
      </div>

      <div class="tab-content px-2 px-sm-3" id="myTabContent">
        <div class="check-boxes d-flex mt-1">
          <div><input type="checkbox" id="media-curso" name="media-curso"><label class="my-0 pt-1 pl-1 pl-sm-2 mr-3 mr-sm-4" for="media-curso">Média Curso</label></div>
          <div><input type="checkbox" id="media-geral" name="media-geral"><label class="my-0 pt-1 pl-1 pl-sm-2" for="media-geral">Média Geral</label></div>
        </div>

        <hr class="my-1">

        <div class="d-sm-flex justify-content-between my-3">
          <h5 class="my-0">Nome: <%= @h.nome %></h5>
          <h5 class="my-0">Matrícula: <%= @h.matricula %></h5>
        </div>

        <%# <hr class="my-1"> %>

        <div class="tab-pane fade show active" id="geral" role="tabpanel" aria-labelledby="geral-tab">
          Colocar aqui informações gerais...
        </div>
        <% @unique_ano_per.each_with_index do |ano_per, index| %>
          <div class="tab-pane fade" id=<%= "per-#{index}" %> role="tabpanel" aria-labelledby=<%= "tab-#{index}" %>>
            <div class="d-sm-flex">
              <div class="indices-box flex-grow-1 pb-2 mr-sm-4">
                <h5 class="indices-box-title text-center py-1">Índices Gerais</h5>
                <div class="mx-1 mx-sm-2 mx-lg-5">
                  <div class="row justify-content-between">
                    <div class="col-auto">
                      <div class="d-flex">
                        <p class="mr-1">IRA: </p>
                        <div><p class="data-box"><%= @ira[index] %></p></div>
                      </div>
                    </div>
                    <div class="col-auto">
                      <div class="d-flex">
                        <p class="mr-1">% APR: </p>
                        <div><p class="data-box"><%= number_to_percentage(@ratio_apr[index] * 100, precision: 1) %></p></div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>

              <div class="indices-box flex-grow-1 pb-2">
                <h5 class="indices-box-title text-center py-1">Contrapartida Proaes</h5>
                <div class="mx-1 mx-sm-2 mx-lg-5">
                  <div class="row justify-content-between">
                    <div class="col">
                      <div class="d-flex">
                        <p class="mr-1">Hrs APR: </p>
                        <div><p class="data-box"><%= @hrs_apr_regulares[index] %></p><p class="data-box-curso">jhghjg</p></div>
                      </div>
                    </div>
                    <div class="col">
                      <div class="d-flex">
                        <p class="mr-1">Hrs REP: </p>
                        <div><p class="data-box"><%= @hrs_rep_media_regulares_eletivas[index] %></p></div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <% else %>
    <div class="shadow rounded mt-4 pt-3 pb-1 px-3 text-muted">
      <p>O arquivo selecionado não foi idendificado como um histórico válido do SIGAA.</p>
    </div>
  <% end %>
</div>
