
<div class="container pt-3 pb-5">

  <%= form_tag(upload_path, multipart: true) do %>
    <%= file_field_tag 'historico', accept: '.pdf', class: '', required: true %>
    <%= submit_tag "Upload", class: 'btn btn-secondary' %>
  <% end %>

  <% if @pdf_verified %>
    <div class="">
      <div class="card-header">
        <ul class="nav nav-pills card-header-tabs" id="myTab" role="tablist">
          <li class="nav-item">
            <a class="nav-link active" id="geral-tab" data-toggle="tab" href="#geral" role="tab" aria-controls="geral" aria-selected="true">Geral</a>
          </li>
          <% @unique_ano_per.each_with_index do |ano_per, index| %>
            <li class="nav-item">
              <a class="nav-link" id=<%= "tab-#{index}" %> data-toggle="tab" href=<%= "#per-#{index}" %> role="tab" aria-controls=<%= "#per-#{index}" %> aria-selected="false"><%= ano_per %></a>
            </li>
          <% end %>
        </ul>
      </div>

      <div class="tab-content px-3" id="myTabContent">
        <div class="d-flex justify-content-between pt-3 pb-1">
          <h4>Nome: <%= @h.nome %></h4>
          <h4>Matrícula: <%= @h.matricula %></h4>
        </div>

        <div class="tab-pane fade show active text-center" id="geral" role="tabpanel" aria-labelledby="geral-tab">
          Colocar aqui informações gerais...
        </div>
        <% @unique_ano_per.each_with_index do |ano_per, index| %>
          <div class="tab-pane fade text-center" id=<%= "per-#{index}" %> role="tabpanel" aria-labelledby=<%= "tab-#{index}" %>>
            Informações sobre o período <%= ano_per %>
          </div>
        <% end %>
      </div>
    </div>
  <% else %>
    <p>O arquivo selecionado não foi idendificado como um histórico válido do SIGAA.</p>
  <% end %>
</div>
